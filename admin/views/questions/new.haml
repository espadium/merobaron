.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:questions, :index)
      %li.active=link_to pat(:new), url(:questions, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:question)
    .inner
      -form_for :question, url(:questions, :create), :class => :form do |f|
        =partial "questions/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
