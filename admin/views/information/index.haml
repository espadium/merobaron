.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:information, :index)
      %li=link_to pat(:new), url(:information, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:information)
    .inner
      %table.table
        %tr
          %th.first=mat(:information, :id)
          %th=mat(:information, :title)
          %th=mat(:information, :label)
          %th=mat(:information, :name)
          %th=mat(:information, :body)
          %th.last="&nbsp;"
        -@information.each do |information|
          %tr
            %td.first=information.id
            %td=information.title
            %td=information.label
            %td=information.name
            %td=information.body
            %td.last
              =button_to pat(:edit), url(:information, :edit, :id => information.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:information, :destroy, :id => information.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
